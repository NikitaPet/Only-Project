{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@app/*": ["app/*"],
            "@global/*": ["global/*"],
            "@global-hooks/*": ["global/hooks/*"],
            "@global-styles-assets/*": ["global/styles/assets/*"],
        },
        //
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        //
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
